@startuml
'https://plantuml.com/class-diagram

class Inventory {
    - inventoryID: String
    - ingredients: Ingredient[]
    - dateUpdated: Date
}

class Ingredient {
    - ingredientID: String
    - productName: String
    - quantityDetails: IngredientStorage
    - unitDetails: IngredientUnit
    - dateAdded: Date
    - dateUpdated: Date

    + getIngredientDetails(ingredientID: String): Ingredient
    + updateIngredient(ingredientID: String): void
}

class IngredientUnit {
    + pricePerUnit: double
    + unitOfMeasurement: String
}

class IngredientStorageRequirement {
    + currentQuantity: double
    + maxQuantityLimit: double
    + alertLowQuantity: double
    + timesReachedLow: int
}

class Recipe {
    - recipeID: String
    + recipeComponents: RecipeComponent[]
    + useCount: int
    + useHistory: RecipeUseHistory[]
}

class RecipeUseHistory {
    + lastUsed: Date
    + recipe: Recipe
}

class RecipeComponent {
    + ingredient: Ingredient
    + quantity: int
}

enum DATA_POINTS {
    RECIPE_USED
    INGREDIENT_USED
    TIMES_INGREDIENT_REACHED_LOW
}

class Report {
    - reportID: String
    - dataPoints: DATA_POINTS
    - ingredientsData: Ingredient[]
    - recipeData: Recipe[]

    + getReport(reportID: String): Report
}

Inventory o-- Ingredient
Ingredient *-- IngredientStorageRequirement
Ingredient *-- IngredientUnit
Recipe *-- RecipeComponent
Recipe *-- RecipeUseHistory
RecipeComponent o-- Ingredient
Report o-- Ingredient
Report o-- Recipe

@enduml